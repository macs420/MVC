@model IEnumerable<MvcMovie.Models.Movie>

<h1>Movies</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.ReleaseDate.ToShortDateString()</td>
            <td>@movie.Genre</td>
            <td>@movie.Price.ToString("C")</td>
        </tr>
    }
    </tbody>
</table>
